<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dandyhacks.datereader.PopUp"
    android:background="#008C10"
    >


    <Button
        android:id="@+id/button"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Click here to start!"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:backgroundTint="#FF1800"
    />

    <TextView
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily = "sans-serif-condensed"
        android:textColor="#FFFFFF"
        android:text="Welcome to DateID! Point your phone camera at a date to put it directly in your calendar."
        android:layout_gravity="center_horizontal"
        android:textSize = "38sp"
    />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        app:srcCompat="@drawable/icon" />
</RelativeLayout>
